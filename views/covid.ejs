<html lang="en">
<%- include("./partials/head.ejs") %>

<body>
<%- include("./partials/nav.ejs") %>

<div class="blogs content">
    <h2>COVID-19 Updates</h2>
    <!--        for middleware-->
    <p><%= blogs %></p>

    <% if (blogs.length > 0) { %>
        <% blogs.forEach(blog => { %>

            <h3 class="Country"><%= blog.country %></h3>
            <p class="code"><b>Country Code: </b><%= blog.code %></p>
            <p class="confirmed"><b>Confirmed Cases: </b><%= blog.confirmed %></p>
            <p class="recovered"><b>Recovered Cases: </b><%= blog.recovered %></p>
            <p class="critical"><b>Critical Cases: </b><%= blog.critical %></p>
            <p class="deaths"><b>Deaths: </b> <%= blog.deaths %></p>
        <% }) %>
    <% } else { %>
        <p>Enter Country Code and Refresh</p>
    <% } %>

</div>

<%- include("./partials/footer.ejs") %>
</body>
</html>